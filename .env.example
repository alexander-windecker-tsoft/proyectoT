# Configuración de ambiente para tests
# Copia este archivo a .env y ajusta los valores según tu entorno

# Ambiente de testing (dev, staging, prod, local)
TEST_ENV=dev

# URLs por ambiente (opcional - se usan las del JSON si no se especifican)
DEV_BASE_URL=http://localhost:3000
STAGING_BASE_URL=https://staging-natacion.app.com
PROD_BASE_URL=https://natacion.app.com
LOCAL_BASE_URL=http://127.0.0.1:3000

# Configuraciones específicas de CI/CD
CI=false
HEADLESS=false

# Credenciales de test (si son diferentes por ambiente)
TEST_ADMIN_USER=admin
TEST_ADMIN_PASS=admin123
TEST_INSPECTOR_USER=inspector
TEST_INSPECTOR_PASS=inspector123

# Base de datos de test (si aplica)
TEST_DB_RESET=true
TEST_DB_SEED=true

# Configuración de reportes
GENERATE_ALLURE_REPORT=false
UPLOAD_TEST_RESULTS=false

# Timeouts personalizados (en ms)
CUSTOM_TIMEOUT=30000
CUSTOM_ACTION_TIMEOUT=10000
