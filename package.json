{
  "name": "react-ts-login",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:dev": "TEST_ENV=dev playwright test",
    "test:staging": "TEST_ENV=staging playwright test",
    "test:prod": "TEST_ENV=prod playwright test",
    "test:local": "TEST_ENV=local playwright test",
    "test:dev:ui": "TEST_ENV=dev playwright test --ui",
    "test:staging:headed": "TEST_ENV=staging playwright test --headed",
    "test:login": "playwright test tests/login.spec.ts",
    "test:afiliados": "playwright test tests/afiliados-control.spec.ts",
    "test:smoke": "npx cross-env TEST_ENV=dev playwright test --grep @smoke",
    "test:smoke:dev": "npx cross-env TEST_ENV=dev playwright test --grep @smoke",
    "test:smoke:staging": "npx cross-env TEST_ENV=staging playwright test --grep @smoke",
    "test:smoke:prod": "npx cross-env TEST_ENV=prod playwright test --grep @smoke",
    "test:sanity": "playwright test --grep @sanity",
    "test:sanity:dev": "npx cross-env TEST_ENV=dev playwright test --grep @sanity",
    "test:sanity:staging": "npx cross-env TEST_ENV=staging playwright test --grep @sanity",
    "test:sanity:prod": "npx cross-env TEST_ENV=prod playwright test --grep @sanity",
    "test:critical": "playwright test --grep @critical",
    "test:regression": "playwright test --grep @regression",
    "test:regression:all": "playwright test",
    "test:regression:dev": "TEST_ENV=dev playwright test",
    "test:regression:staging": "TEST_ENV=staging playwright test",
    "test:regression:prod": "TEST_ENV=prod playwright test --grep @smoke",
    "regression:complete": "npm run test:regression:dev && npm run test:regression:staging && npm run test:regression:prod",
    "ci:install": "npm ci",
    "ci:lint": "npm run lint",
    "ci:build": "npm run build",
    "ci:test": "npm run test",
    "ci:test:dev": "npm run test:dev",
    "ci:test:staging": "npm run test:staging",
    "ci:test:prod": "npm run test:prod",
    "playwright:install": "npx playwright install --with-deps",
    "playwright:install:chromium": "npx playwright install chromium --with-deps",
    "playwright:codegen": "npx playwright codegen",
    "playwright:trace": "npx playwright show-trace",
    "report:open": "npx playwright show-report",
    "report:serve": "npx serve playwright-report",
    "clean": "rm -rf playwright-report test-results",
    "clean:all": "npm run clean && rm -rf node_modules",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "dependencies": {
    "@types/sql.js": "^1.4.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.54.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0"
  }
}
